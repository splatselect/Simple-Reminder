<Window x:Class="ReminderApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotkey Settings"
        Height="320"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Customize Global Hotkey"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1"
                   Text="Select modifier keys and a letter key:"
                   FontSize="12"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,15">
            <TextBlock Text="Modifiers:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox x:Name="WinCheckBox" Content="Win Key" Margin="0,0,15,0" IsChecked="True"/>
                <CheckBox x:Name="CtrlCheckBox" Content="Ctrl" Margin="0,0,15,0"/>
                <CheckBox x:Name="AltCheckBox" Content="Alt" Margin="0,0,15,0"/>
                <CheckBox x:Name="ShiftCheckBox" Content="Shift" Margin="0,0,0,0" IsChecked="True"/>
            </StackPanel>

            <TextBlock Text="Key:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="KeyComboBox" Width="200" HorizontalAlignment="Left" SelectionChanged="KeyComboBox_SelectionChanged">
                <ComboBoxItem Content="A"/>
                <ComboBoxItem Content="B"/>
                <ComboBoxItem Content="C"/>
                <ComboBoxItem Content="D"/>
                <ComboBoxItem Content="E"/>
                <ComboBoxItem Content="F"/>
                <ComboBoxItem Content="G"/>
                <ComboBoxItem Content="H"/>
                <ComboBoxItem Content="I"/>
                <ComboBoxItem Content="J"/>
                <ComboBoxItem Content="K"/>
                <ComboBoxItem Content="L" IsSelected="True"/>
                <ComboBoxItem Content="M"/>
                <ComboBoxItem Content="N"/>
                <ComboBoxItem Content="O"/>
                <ComboBoxItem Content="P"/>
                <ComboBoxItem Content="Q"/>
                <ComboBoxItem Content="R"/>
                <ComboBoxItem Content="S"/>
                <ComboBoxItem Content="T"/>
                <ComboBoxItem Content="U"/>
                <ComboBoxItem Content="V"/>
                <ComboBoxItem Content="W"/>
                <ComboBoxItem Content="X"/>
                <ComboBoxItem Content="Y"/>
                <ComboBoxItem Content="Z"/>
            </ComboBox>
        </StackPanel>

        <Border Grid.Row="3"
                Background="#F0F4F8"
                BorderBrush="#3498DB"
                BorderThickness="2"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Current Hotkey:" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                <TextBlock x:Name="PreviewTextBlock"
                          Text="Win+Shift+L"
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="#2C3E50"/>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="4"
                  x:Name="StatusTextBlock"
                  TextWrapping="Wrap"
                  FontSize="11"
                  Foreground="#7F8C8D"
                  VerticalAlignment="Top"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Test Hotkey"
                   Padding="15,8"
                   Margin="0,0,10,0"
                   Click="TestHotkey_Click"/>
            <Button Content="Save"
                   Padding="15,8"
                   Margin="0,0,10,0"
                   Click="Save_Click"
                   Background="#3498DB"
                   Foreground="White"
                   BorderThickness="0"/>
            <Button Content="Cancel"
                   Padding="15,8"
                   Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
