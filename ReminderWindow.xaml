<Window x:Class="ReminderApp.ReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reminder"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#F0F4F8">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="1" MaxHeight="400" Margin="50">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="â°"
                          FontSize="120"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <TextBlock Text="REMINDER"
                          FontSize="48"
                          FontWeight="Bold"
                          Foreground="#2C3E50"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <Border Background="White"
                       BorderBrush="#3498DB"
                       BorderThickness="3"
                       CornerRadius="10"
                       Padding="40"
                       MaxWidth="800"
                       Margin="0,0,0,40">
                    <TextBlock x:Name="MessageTextBlock"
                              FontSize="32"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              Foreground="#34495E"
                              LineHeight="45"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Snooze"
                           FontSize="24"
                           Padding="40,15"
                           Margin="0,0,20,0"
                           Background="#F39C12"
                           Foreground="White"
                           BorderThickness="0"
                           Click="Snooze_Click"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F39C12"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E67E22"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="5"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Dismiss"
                           FontSize="24"
                           Padding="40,15"
                           Background="#3498DB"
                           Foreground="White"
                           BorderThickness="0"
                           Click="Dismiss_Click"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="5"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
