<Window x:Class="ReminderApp.SnoozeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snooze Reminder"
        Height="300"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Snooze for how long?"
                   FontSize="16"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,25">
            <Slider x:Name="MinutesSlider"
                   Minimum="1"
                   Maximum="120"
                   Value="5"
                   TickFrequency="1"
                   IsSnapToTickEnabled="True"
                   TickPlacement="BottomRight"
                   ValueChanged="MinutesSlider_ValueChanged"
                   PreviewMouseUp="MinutesSlider_MouseUp"
                   Margin="0,0,0,10"/>

            <TextBlock x:Name="TimeDisplay"
                      Text="5 minutes"
                      FontSize="28"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Foreground="#3498DB"
                      Margin="0,0,0,5"/>

            <TextBlock x:Name="ReminderTimeDisplay"
                      Text=""
                      FontSize="12"
                      HorizontalAlignment="Center"
                      Foreground="#7F8C8D"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Snooze"
                   Padding="35,12"
                   Margin="0,0,10,0"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Background="#3498DB"
                   Foreground="White"
                   BorderThickness="0"
                   Click="Snooze_Click"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="5"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Cancel"
                   Padding="35,12"
                   FontSize="14"
                   Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
