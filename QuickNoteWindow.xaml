<Window x:Class="ReminderApp.QuickNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Reminder"
        Width="450"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Set Timer (minutes)"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20">
            <Slider x:Name="MinutesSlider"
                   Minimum="1"
                   Maximum="120"
                   Value="15"
                   TickFrequency="1"
                   IsSnapToTickEnabled="True"
                   TickPlacement="BottomRight"
                   ValueChanged="MinutesSlider_ValueChanged"
                   PreviewMouseUp="MinutesSlider_MouseUp"
                   Margin="0,0,0,10"/>

            <TextBlock x:Name="TimeDisplay"
                      Text="15 minutes"
                      FontSize="24"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Foreground="#3498DB"
                      Margin="0,0,0,5"/>

            <TextBlock x:Name="ReminderTimeDisplay"
                      Text=""
                      FontSize="12"
                      HorizontalAlignment="Center"
                      Foreground="#7F8C8D"
                      Margin="0,0,0,10"/>

            <Button x:Name="CalendarButton"
                   Content="ðŸ“… Pick Specific Date/Time"
                   Visibility="Collapsed"
                   Click="CalendarButton_Click"
                   Padding="12,6"
                   HorizontalAlignment="Center"
                   Background="#9B59B6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,0,10"/>

            <Border x:Name="CalendarPanel"
                   Visibility="Collapsed"
                   Background="#F8F9FA"
                   BorderBrush="#BDC3C7"
                   BorderThickness="2"
                   CornerRadius="5"
                   Padding="15"
                   Margin="0,0,0,10">
                <StackPanel>
                    <Calendar x:Name="DatePicker"
                             SelectionMode="SingleDate"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Time:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                        <ComboBox x:Name="HourPicker" Width="60" Margin="0,0,5,0"/>
                        <TextBlock Text=":" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16" FontWeight="Bold"/>
                        <ComboBox x:Name="MinutePicker" Width="60" Margin="0,0,5,0"/>
                        <ComboBox x:Name="AmPmPicker" Width="60">
                            <ComboBoxItem Content="AM"/>
                            <ComboBoxItem Content="PM"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="What do you want to be reminded about?"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <TextBox Grid.Row="3"
                 x:Name="MessageTextBox"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Padding="8"
                 FontSize="14"
                 MinHeight="80"
                 Background="White"
                 BorderBrush="#CCCCCC"
                 BorderThickness="2"
                 Margin="0,0,0,20"
                 KeyDown="MessageTextBox_KeyDown"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Start Timer"
                   Padding="30,12"
                   Margin="0,0,10,0"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Background="#3498DB"
                   Foreground="White"
                   BorderThickness="0"
                   Click="StartTimer_Click"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="5"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Cancel"
                   Padding="30,12"
                   FontSize="14"
                   Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
