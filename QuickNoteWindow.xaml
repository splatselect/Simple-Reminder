<Window x:Class="ReminderApp.QuickNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Reminder"
        Height="400"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="What do you want to be reminded about?"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <TextBox Grid.Row="1"
                 x:Name="MessageTextBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Padding="8"
                 FontSize="14"
                 MinHeight="80"
                 Background="White"
                 BorderBrush="#CCCCCC"
                 BorderThickness="2"
                 Margin="0,0,0,20"/>

        <TextBlock Grid.Row="2"
                   Text="Set Timer (minutes)"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,0,0,20">
            <Slider x:Name="MinutesSlider"
                   Minimum="1"
                   Maximum="120"
                   Value="15"
                   TickFrequency="1"
                   IsSnapToTickEnabled="True"
                   TickPlacement="BottomRight"
                   ValueChanged="MinutesSlider_ValueChanged"
                   Margin="0,0,0,10"/>

            <TextBlock x:Name="TimeDisplay"
                      Text="15 minutes"
                      FontSize="24"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Foreground="#3498DB"
                      Margin="0,0,0,5"/>

            <TextBlock x:Name="ReminderTimeDisplay"
                      Text=""
                      FontSize="12"
                      HorizontalAlignment="Center"
                      Foreground="#7F8C8D"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Start Timer"
                   Padding="30,12"
                   Margin="0,0,10,0"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Background="#3498DB"
                   Foreground="White"
                   BorderThickness="0"
                   Click="StartTimer_Click"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="5"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Cancel"
                   Padding="30,12"
                   FontSize="14"
                   Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
